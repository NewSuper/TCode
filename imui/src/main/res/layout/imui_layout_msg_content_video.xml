<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="centerInside"
    android:src="@mipmap/ic_launcher">

    <ImageView
        android:id="@+id/iv_video_msg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/imui_ic_video_play"
        app:layout_constraintBottom_toBottomOf="@id/iv_video_msg"
        app:layout_constraintEnd_toEndOf="@id/iv_video_msg"
        app:layout_constraintStart_toStartOf="@id/iv_video_msg"
        app:layout_constraintTop_toTopOf="@id/iv_video_msg" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="right|center_vertical"
        android:shadowColor="@color/color_333"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="14:35"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@id/iv_video_msg"
        app:layout_constraintRight_toRightOf="@id/iv_video_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>

