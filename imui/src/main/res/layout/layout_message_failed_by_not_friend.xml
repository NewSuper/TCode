<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_message_failed_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送失败，请先添加对方为好友"
        android:textColor="@color/message_time_text_color"
        android:textSize="@dimen/message_time_text_size"
        android:layout_marginBottom="@dimen/message_time_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_message_failed_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即添加"
        android:textColor="#377FF7"
        android:textSize="@dimen/message_time_text_size"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_message_failed_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>