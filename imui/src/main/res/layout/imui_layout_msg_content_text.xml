<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:maxWidth="@dimen/message_content_max_width">

    <com.qx.imui.view.AutoLinkTextView
        android:id="@+id/tv_text_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/message_content_text_max_width"
        android:padding="@dimen/dp_5"
        android:textColor="@color/message_content_text"
        android:textSize="@dimen/message_text_msg_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>